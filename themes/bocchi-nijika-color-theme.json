{
    "name": "Bocchi - Nijika",
    "type": "dark",
    "colors": {
        "editor.background": "#211f1d",
        "editor.foreground": "#eedece",
        "activityBarBadge.background": "#e5cf79",
        "sideBarTitle.foreground": "#eedece",
        "titleBar.activeBackground": "#211f1d",
        "titleBar.activeForeground": "#eedece",
        "statusBar.background": "#211f1d",
        "statusBar.foreground": "#eedece",
        "sideBar.background": "#3d3b3b",
        "activityBar.background": "#3d3b3b",
        "tab.activeBackground": "#211f1d",
        "tab.inactiveBackground": "#3d3b3b"
    },
    "tokenColors": [
        // Nijika的配色方案 - 通用
        {
            "name": "Nijika Ijichi - Keywords",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier"
            ],
            "settings": {
                "foreground": "#e5cf79"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#6a5a4c",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Nijika Ijichi - C++ STL",
            "scope": [
                "entity.name.class",
                "entity.name.function",
                "entity.name.type"
            ],
            "settings": {
                "foreground": "#99bfc7"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Functions",
            "scope": [
                "entity.name.function"
            ],
            "settings": {
                "foreground": "#99bfc7"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Operators",
            "scope": [
                "keyword.operator",
                "punctuation.separator"
            ],
            "settings": {
                "foreground": "#526fa1"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Types",
            "scope": [
                "entity.name.type",
                "entity.name.class",
                "entity.name.struct"
            ],
            "settings": {
                "foreground": "#eedece"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Strings",
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#e5cf79"
            }
        },
        {
            "name": "Nijika Ijichi - C++ Numbers",
            "scope": [
                "constant.numeric"
            ],
            "settings": {
                "foreground": "#bea14d"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Headers",
            "scope": [
                "markup.heading",
                "entity.name.section"
            ],
            "settings": {
                "foreground": "#e5cf79",
                "fontStyle": "bold"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Lists",
            "scope": [
                "markup.list.unnumbered",
                "markup.list.numbered",
                "punctuation.definition.list"
            ],
            "settings": {
                "foreground": "#99bfc7"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Emphasis",
            "scope": [
                "markup.italic",
                "markup.bold"
            ],
            "settings": {
                "foreground": "#eedece",
                "fontStyle": "italic bold"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Blockquotes",
            "scope": [
                "markup.quote",
                "punctuation.definition.quote"
            ],
            "settings": {
                "foreground": "#526fa1",
                "fontStyle": "italic"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Links",
            "scope": [
                "markup.underline.link",
                "string.other.link"
            ],
            "settings": {
                "foreground": "#99bfc7",
                "fontStyle": "underline"
            }
        },
        {
            "name": "Nijika Ijichi - Markdown Code",
            "scope": [
                "markup.inline.raw",
                "markup.fenced_code",
                "markup.raw.block"
            ],
            "settings": {
                "foreground": "#bea14d"
            }
        },
        {
            "name": "Nijika Ijichi - JSON Keys",
            "scope": [
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#e5cf79"
            }
        },
        {
            "name": "Nijika Ijichi - YAML Keys",
            "scope": [
                "entity.name.tag.yaml"
            ],
            "settings": {
                "foreground": "#e5cf79"
            }
        },
        {
            "name": "Nijika Ijichi - HTML Tags",
            "scope": [
                "entity.name.tag.html",
                "entity.name.tag.xml"
            ],
            "settings": {
                "foreground": "#99bfc7"
            }
        },
        {
            "name": "Nijika Ijichi - HTML Attributes",
            "scope": [
                "entity.other.attribute-name.html",
                "entity.other.attribute-name.xml"
            ],
            "settings": {
                "foreground": "#e5cf79"
            }
        },
        {
            "name": "Nijika Ijichi - Punctuation",
            "scope": [
                "punctuation",
                "meta.brace",
                "meta.delimiter"
            ],
            "settings": {
                "foreground": "#8a7b6d"
            }
        },
        {
            "name": "Nijika Ijichi - Brackets",
            "scope": [
                "meta.bracket",
                "punctuation.definition.bracket"
            ],
            "settings": {
                "foreground": "#bea14d"
            }
        },
        {
            "name": "Nijika Ijichi - Special Operators",
            "scope": [
                "keyword.operator.arithmetic",
                "keyword.operator.logical",
                "keyword.operator.comparison"
            ],
            "settings": {
                "foreground": "#c7a899"
            }
        }
    ]
}