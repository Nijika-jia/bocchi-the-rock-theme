{
    "name": "Bocchi - Nijika Light",
    "type": "light",
    "colors": {
        // 编辑器核心
        "editor.background": "#F4E8DE",
        "editor.foreground": "#020201",
        "editor.lineHighlightBackground": "#FEFE0120",
        "editor.selectionBackground": "#EDCE6040",
        "editor.selectionHighlightBackground": "#FEFE0130",
        "editor.findMatchBackground": "#EDCE6050",
        "editor.findMatchHighlightBackground": "#FEFE0130",
        
        // 编辑器装饰
        "editorLineNumber.foreground": "#48484A",
        "editorLineNumber.activeForeground": "#020201",
        "editorIndentGuide.background": "#48484A30",
        "editorIndentGuide.activeBackground": "#48484A60",
        "editorBracketMatch.background": "#FEFE0140",
        "editorBracketMatch.border": "#EDCE60",
        
        // 侧边栏
        "sideBar.background": "#F4E8DE",
        "sideBar.foreground": "#020201",
        "sideBarTitle.foreground": "#020201",
        "sideBarSectionHeader.background": "#EDCE6030",
        "sideBarSectionHeader.foreground": "#020201",
        
        // 活动栏
        "activityBar.background": "#EDCE60",
        "activityBar.foreground": "#020201",
        "activityBar.inactiveForeground": "#48484A",
        "activityBarBadge.background": "#FEFE01",
        "activityBarBadge.foreground": "#020201",
        
        // 标题栏
        "titleBar.activeBackground": "#EDCE60",
        "titleBar.activeForeground": "#020201",
        "titleBar.inactiveBackground": "#EDCE60CC",
        "titleBar.inactiveForeground": "#48484A",
        
        // 状态栏
        "statusBar.background": "#EDCE60",
        "statusBar.foreground": "#020201",
        "statusBar.debuggingBackground": "#FEFE01",
        "statusBar.noFolderBackground": "#EDCE60",
        
        // 标签页
        "tab.activeBackground": "#F4E8DE",
        "tab.inactiveBackground": "#F4E8DECC",
        "tab.activeForeground": "#020201",
        "tab.inactiveForeground": "#48484A",
        "tab.activeBorderTop": "#FEFE01",
        "tab.hoverBackground": "#EDCE6020"
    },
    "tokenColors": [
        // 基础语法
        {
            "name": "Keywords",
            "scope": [
                "keyword",
                "storage.type",
                "storage.modifier",
                "keyword.control",
                "keyword.operator.new"
            ],
            "settings": {
                "foreground": "#B8860B"
            }
        },
        {
            "name": "Types",
            "scope": [
                "entity.name.type",
                "entity.name.class",
                "entity.name.struct",
                "entity.name.enum",
                "entity.name.interface",
                "support.type",
                "support.class"
            ],
            "settings": {
                "foreground": "#8B7500"
            }
        },
        {
            "name": "Functions",
            "scope": [
                "entity.name.function",
                "support.function",
                "meta.function-call"
            ],
            "settings": {
                "foreground": "#CB3C50"
            }
        },
        {
            "name": "Variables",
            "scope": [
                "variable",
                "variable.other",
                "variable.parameter",
                "variable.language"
            ],
            "settings": {
                "foreground": "#3A3806"
            }
        },
        {
            "name": "Strings",
            "scope": [
                "string",
                "string.template",
                "string.quoted"
            ],
            "settings": {
                "foreground": "#6F6C0C"
            }
        },
        {
            "name": "Comments",
            "scope": [
                "comment",
                "punctuation.definition.comment"
            ],
            "settings": {
                "foreground": "#48484A",
                "fontStyle": "italic"
            }
        },
        // 特定语言语法
        {
            "name": "TypeScript Decorators",
            "scope": [
                "meta.decorator",
                "variable.annotation"
            ],
            "settings": {
                "foreground": "#DAA520"
            }
        },
        {
            "name": "JSX/TSX Tags",
            "scope": [
                "entity.name.tag",
                "punctuation.definition.tag"
            ],
            "settings": {
                "foreground": "#B8860B"
            }
        },
        {
            "name": "JSX/TSX Attributes",
            "scope": [
                "entity.other.attribute-name"
            ],
            "settings": {
                "foreground": "#8B7500"
            }
        },
        {
            "name": "Markup/Markdown Headers",
            "scope": [
                "markup.heading",
                "entity.name.section"
            ],
            "settings": {
                "foreground": "#B8860B",
                "fontWeight": "bold"
            }
        },
        {
            "name": "Markup/Markdown Links",
            "scope": [
                "markup.underline.link",
                "string.other.link"
            ],
            "settings": {
                "foreground": "#6F6C0C",
                "fontStyle": "underline"
            }
        },
        {
            "name": "Configuration Keys",
            "scope": [
                "entity.name.tag.yaml",
                "support.type.property-name.json"
            ],
            "settings": {
                "foreground": "#8B7500"
            }
        },
        {
            "name": "Docker Keywords",
            "scope": [
                "keyword.other.special-method.dockerfile"
            ],
            "settings": {
                "foreground": "#B8860B"
            }
        },
        {
            "name": "Shell Variables",
            "scope": [
                "variable.other.normal.shell",
                "variable.other.special.shell"
            ],
            "settings": {
                "foreground": "#DAA520"
            }
        },
        {
            "name": "CSS Properties",
            "scope": [
                "support.type.property-name.css",
                "support.type.property-name.scss"
            ],
            "settings": {
                "foreground": "#8B7500"
            }
        },
        {
            "name": "CSS Values",
            "scope": [
                "support.constant.property-value.css"
            ],
            "settings": {
                "foreground": "#6F6C0C"
            }
        },
        {
            "name": "XML/HTML Tags",
            "scope": [
                "entity.name.tag.xml",
                "entity.name.tag.html"
            ],
            "settings": {
                "foreground": "#B8860B"
            }
        },
        {
            "name": "XML/HTML Attributes",
            "scope": [
                "entity.other.attribute-name.xml",
                "entity.other.attribute-name.html"
            ],
            "settings": {
                "foreground": "#8B7500"
            }
        }
    ]
} 